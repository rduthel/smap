<div class="navbar-smap">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-smap-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-smap-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <%= link_to " Nos véhicules ",  cars_path , class: "navbar-smap-item navbar-smap-link" %>&nbsp;
      <!-- Avatar with dropdown menu -->
      <div class="navbar-smap-item">
        <div class="dropdown">
              <% if current_user && current_user.driver_profile.photo != nil  %>
            <%= image_tag current_user.driver_profile.photo, class:"avatar dropdown-toggle", id:"navbar-smap-menu", data: { toggle: 'dropdown' } %>
            <% else %>
            <%= image_tag ("profil.png"), class:"avatar dropdown-toggle", id:"navbar-smap-menu", data: { toggle: 'dropdown' } %>
            <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-smap-dropdown-menu">
            <li><%= link_to "Profil", profil_path %></a></li>
            <li><%= link_to "Tableau de bord", dashboard_path %></a></li>
            <li><%= link_to "Déconnexion", destroy_user_session_path, method: :delete %></a></li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->

      <%= link_to "Nos véhicules", cars_path, class: "navbar-smap-item navbar-smap-link" %>
      <%= render 'shared/modal_sign_in', class: "navbar-smap-item navbar-smap-link" %>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-smap-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-smap-dropdown-menu">
        <li><a href="#">Nos véhicules</a></li>
        <li><a href="#">Connexion</a></li>
      </ul>
    </div>
  </div>
</div>



