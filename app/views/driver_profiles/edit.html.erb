<%= simple_form_for @driver_profile, url:profil_path do |f| %>
  <%= f.input :title %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :address %>
  <%= f.input :zip_code %>
  <%= f.input :city %>
  <%= f.input :birthdate, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, order: [:day, :month, :year] %>
  <%= f.input :telephone_number %>
  <%= f.input :photo %>
  <%= f.input :driving_license %>
  <%= f.input :identity_card %>
  <%= f.button :submit %>

  <%= link_to "Change your email/password",  edit_user_registration_path  %>
<% end %>
